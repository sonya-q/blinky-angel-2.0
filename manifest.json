{
  "name": "Blinky Angel",
  "description": "version 2.0, completely hand-coded",
  "version": "2.0",
  "manifest_version": 3,

  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./assets/eye.png"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "libs/tf.min.js",
      "libs/face-landmarks-detection.min.js",
      "content.js"
    ],
    "run_at": "document_idle"
  }]
}